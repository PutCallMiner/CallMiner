{%- macro tab_button(idx, current, is_icon = false, text = "" , title = "") -%}
    <a href="?tab={{ idx }}"
       class="{{ "icon-button" if is_icon else "" }} {{ "active" if idx == current else "" }}"
       title="{{ title }}"
       hx-get="?tab={{ idx }}"
       hx-target="closest .tabs"
       hx-swap="outerHTML"
       hx-trigger="click">
        {%- if is_icon -%}
            <span class="icon">{{ text }}</span>
        {%- else -%}
            {{ text }}
        {%- endif -%}
    </a>
{%- endmacro -%}
{%- macro progress_circle(link, delay = 0) -%}
    <div class="progress" hx-get={{ link }} hx-target="this" hx-swap="outerHTML" hx-trigger={{ "load delay:" ~ delay }}>
        <svg viewBox="25 25 50 50">
            <circle r="20" cy="50" cx="50"></circle>
        </svg>
    </div>
{%- endmacro -%}
